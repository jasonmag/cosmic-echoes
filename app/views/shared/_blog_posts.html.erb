<section class="py-16">
  <div class="container mx-auto">
    <h2 class="text-2xl font-semibold mb-8">Latest Blog Posts</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Placeholder for blog post cards -->
      <% @blogs.each do |blog| %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <%= image_tag(blog.image, alt: "Blog Post Image", class: "mb-4") %>
          <h3 class="text-xl font-semibold mb-2"><%= blog.title %></h3>
          <p class="text-gray-600"><%= truncate(blog.body, length: 150) %></p>
          <%= link_to "Read More", blog_path(blog), class: "text-blue-600 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>
</section>