<body class="bg-gray-100 font-sans min-h-screen flex flex-col items-center justify-center">
  <!-- Header Section -->
  <%= render 'shared/header' %>
  <%= render 'shared/flash' %>

  <div class="container mx-auto text-center">

    <h1 class="text-2xl font-bold mt-8 mb-4">Blog</h1>

    <% if user_signed_in? %>
      <%= link_to "New Blog", new_blog_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
  </div>

  <!-- Blog Posts Section -->
  <%= render partial: 'shared/blog_posts', locals: { blogs: @blogs, num_of_blog: 50 } %>

  <!-- Footer Section -->
  <%= render 'shared/footer' %>
</body>
